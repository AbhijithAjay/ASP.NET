@model JokesWeb.Models.Joke
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Edit";
    var user = await UserManager.GetUserAsync(User);
    string userId = user.Id;
}

<h1>Edit</h1>

<h4>Joke</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="JokeQn" class="control-label"></label>
                <input asp-for="JokeQn" class="form-control" />
                <span asp-validation-for="JokeQn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JokeAns" class="control-label"></label>
                <input asp-for="JokeAns" class="form-control" />
                <span asp-validation-for="JokeAns" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control">
                <option value="@userId">@userId</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
